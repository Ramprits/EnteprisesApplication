{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@wcmApplication/*": [
        "libs/*"
      ],
      "@wcmApplication/web": [
        "xplat/web/index.ts"
      ],
      "@wcmApplication/web/*": [
        "xplat/web/*"
      ],
      "@wcmApplication/featuresuinav": [
        "libs/featuresuinav/src/index.ts"
      ],
      "@wcmApplication/features/ui/nav": [
        "libs/features/ui/nav/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
